{
  "name": "how-engineers-think",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "generate": "node scripts/generate-lessons-json.js",
    "validate:data": "node scripts/validate-lessons-json.js",
    "prebuild": "npm run generate && npm run validate:data",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test && npm run validate:data",
    "prepare": "husky"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.33.0",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.4",
    "@playwright/test": "^1.41.1",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  }
}
